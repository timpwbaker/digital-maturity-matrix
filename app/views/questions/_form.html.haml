= form_for([matrix, question]) do |f|
  - if question.errors.any?
    #error_explanation
      %h2
        = pluralize(question.errors.count, "error")
        prohibited this question from being saved:
      %ul
        - question.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :body
    %br/
    = f.text_field :body
  .field
    = f.label :area
    %br/
    = f.select :area, Matrix.digital_maturity_areas
  .field
    = f.hidden_field :matrix_id, :value => params[:matrix_id]
  .actions
    = f.submit
