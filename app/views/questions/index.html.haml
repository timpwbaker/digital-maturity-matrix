%p#notice= notice
%h1 Listing Questions
%table
  %thead
    %tr
      %th Body
      %th Area
      %th{:colspan => "3"}
  %tbody
    - @questions.each do |question|
      %tr
        %td= question.body
        %td= question.area
        %td= link_to 'Edit', edit_matrix_question_path(question.matrix_id, question)
        %td= link_to 'Destroy', matrix_question_path(question.matrix_id, question), method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Question', new_matrix_question_path
