= form_for @target do |f|
  - if @target.errors.any?
    #error_explanation
      %h2= "#{pluralize(@target.errors.count, "error")} prohibited this target from being saved:"
      %ul
        - @target.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :question_answered
    = f.text_field :question_answered
  .field
    = f.label :choice
    = f.text_field :choice
  .field
    = f.label :question
    = f.text_field :question
  .field
    = f.label :submission
    = f.text_field :submission
  .actions
    = f.submit 'Save'
