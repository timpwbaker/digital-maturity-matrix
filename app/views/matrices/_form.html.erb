<%= form_for(matrix) do |f| %>
  <% if matrix.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(matrix.errors.count, "error") %>
        prohibited this matrix from being saved:
      </h2>
      <ul>
        <% matrix.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :name %>
    <br/>
    <%= f.text_field :name %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
