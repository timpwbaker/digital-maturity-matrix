<p id="notice">
  <%= notice %>
</p>
<h1>Listing Submissions</h1>
<table>
  <thead>
    <tr>
      <th>Matrix</th>
      <th>Created by</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% submissions.each do |submission| %>
      <% if user_signed_in? && (submission.user == current_user || current_user.admin?) %>
        <tr>
          <td>
            <%= submission.matrix.name %>
          </td>
          <td>
            <%= submission.user.name %>
          </td>
          <td>
            <%= link_to 'Show', matrix_submission_path(matrix, submission) %>
          </td>
          <td>
            <%= link_to 'Destroy', matrix_submission_path(matrix, submission), method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
